<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddBudActivity" 
    android:background="@drawable/cork">"

    

    <EditText
        android:id="@+id/userInputing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/userLabel"
        android:layout_marginTop="64dp"
        android:background="@drawable/textborder2"
        android:ems="10" />

    <Button
        android:id="@+id/sub"
        android:layout_width="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userInputing"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:text="Add a Bud" 
        android:textColor="@color/white"
        android:background="@drawable/roundbutton"/>

    <TextView
        android:id="@+id/userLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="82dp"
        android:gravity="center_vertical"
        android:text="User Name: "
        android:textColor="@color/white"
        android:textSize="40dp" />
    
</RelativeLayout>