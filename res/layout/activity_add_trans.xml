<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddTransActivity" 
    android:orientation="vertical"
    android:background="@drawable/cork"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/addtrantit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add    Transaction:"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold" />

"
<TextView
	    android:id="@+id/line"
	    android:layout_width="match_parent"
	    android:layout_height="7dp"
	    android:background="@color/white"
	    android:textStyle="bold" 
	    android:layout_marginTop="7dp"
	    android:layout_marginBottom="10dp"
	    />
	
    <LinearLayout
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:id="@+id/transactionInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:paddingTop="20dp"
        android:paddingBottom="20dp">
        
	    <TextView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="Transaction Name: " 
	        android:layout_weight="1"
	        android:textColor="@color/white"
	        android:textSize="20dp"
	        android:textStyle="bold"/>
	     <EditText
	        android:id="@+id/inTransName"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"  
	        android:layout_weight="1"
	        android:background="@drawable/textborder"
	        android:layout_gravity="center_vertical"/>"
	 </LinearLayout>
	     
	 <LinearLayout
        android:id="@+id/nameInput"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/transactionInput"  
        android:paddingTop="20dp"
        android:paddingBottom="20dp">
	    <TextView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="Other person: "  
	        android:layout_weight="1"
	        android:textColor="@color/white"
	        android:textSize="20dp"
	        android:textStyle="bold"/>
	     <EditText
	        android:id="@+id/inOtherPerson"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"  
	        android:layout_weight="1"
	        android:background="@drawable/textborder"/>
	     
	  </LinearLayout>
	     
	  <LinearLayout
        android:id="@+id/amountInput"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameInput"  
        android:paddingTop="20dp"
        android:paddingBottom="20dp">
	    <TextView
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="Amount: "  
	        android:layout_weight="1"
	        android:textColor="@color/white"
	        android:textSize="20dp"
	        android:textStyle="bold"/>
	    <EditText
	        android:id="@+id/inAmount"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"  
	        android:layout_weight="1"
	        android:background="@drawable/textborder"/>
	  </LinearLayout>

	  <Button
	      android:id="@+id/sub2"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:text="Add"
	      android:textColor="@color/white" 
	      android:layout_gravity="center_horizontal"
	      android:background="@drawable/roundbutton"
	      android:layout_marginTop="20dp"/>"

"
    
</LinearLayout>