<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.payback"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.payback.LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.payback.HomeActivity"
            android:label="@string/title_activity_home" >
        </activity>
        <activity
            android:name="com.example.payback.TransactionsActivity"
            android:label="@string/title_activity_transactions" >
        </activity>
        <activity
            android:name="com.example.payback.NetworkActivity"
            android:label="@string/title_activity_network" >
        </activity>
        <activity
            android:name="com.example.payback.UserTransActivity"
            android:label="@string/title_activity_user_trans" >
        </activity>
        <activity
            android:name="com.example.payback.AddBudActivity"
            android:label="@string/title_activity_add_bud" >
        </activity>
        <activity
            android:name="com.example.payback.AddTransActivity"
            android:label="@string/title_activity_add_trans" >
        </activity>
        <activity
            android:name="com.example.payback.MinusActivity"
            android:label="@string/title_activity_minus" >
        </activity>
    </application>

</manifest>